#

# Prepare the environment.
$:  << File.join(Dir.getwd, 'lib')
$0  = 'kintara'

# Import required kintara modules.
require 'kintara'

# Start a new instance of the application.
begin
    Kintara.new
rescue Exception => err
    # XXX - eventually put logging and such here.
    raise
end

exit 0
